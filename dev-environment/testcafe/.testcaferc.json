{
  "browsers": "chromium:headless --no-sandbox --disable-dev-shm-usage",
  "src": "/tests",
  "screenshotPath": "/artifacts",
  "videoPath": "/artifacts",
  "takeScreenshotsOnFails": true,
  "screenshotPathPattern": "${DATE}_${TIME}/${TEST_ID}/${USERAGENT}-${FILE_INDEX}.png",
  "videoOptions": {
    "failedOnly": true,
    "pathPattern": "${DATE}_${TIME}/${TEST_ID}/${USERAGENT}-${FILE_INDEX}.mp4"
    }
}
